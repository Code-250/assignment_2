<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="match_parent">
<LinearLayout
    android:id="@+id/right_side"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >


    <TextView
        android:id="@+id/txtTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Services"
    style="@style/TextAppearance.AppCompat.Title"
    android:textSize="20sp"/>

    <TextView
        android:id="@+id/txtSub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NO SERVICES"
        android:layout_marginTop="10dp"
        android:layout_below="@id/txtTitle"
        style="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/text_body"
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtSub"
        android:layout_marginTop="20dp"
        android:text="Add a premium service to your account now"
         android:textSize="20sp"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/right_side"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/service_menu"
            android:layout_width="70dp"
            android:src="@drawable/ic_baseline_menu_24"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="20dp"

            android:layout_height="wrap_content"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/service_menu"
            android:text="Manage services"/>
    </LinearLayout>



</RelativeLayout>